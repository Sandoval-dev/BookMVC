@model List<Book>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Our Books</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @if (Model.Count > 0)
            {
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Stock</th>
                            <th>Category</th>
                            <th>###</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.Stock</td>
                               <td>@book.CategoryId</td>
                                <td>
                                    <a href="/Books/Update?bookId=@book.Id"><i class="fas fa-flag"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <p>Book not found.</p>
            }

        </div>
    </div>
</div>